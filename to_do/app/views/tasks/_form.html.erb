<%= form_for (@task) do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :description %><br>
  <%= f.text_area :description %><br>

<% if request.path.include?('edit') %>
  <%= f.label :completed %>
  <%= f.check_box :completed %><br>
<% end %>

  <%= f.submit 'Submit!' %>
<% end %>
