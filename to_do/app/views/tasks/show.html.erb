<h1><%= @task.title %></h1>

<%= @task.description %>
<%= link_to check_box_tag(:tasks, :complete, :completed),
    "/tasks/#{@task.id}/complete/#{!@task.completed}"%><br>
Completed? : <%= @task.completed%>
<%= button_to 'Edit', edit_task_path(@task), method: :get %>
<%= button_to 'Delete', task_path(@task), method: :delete %>
<%= button_to 'Back to List', tasks_path, method: :get %>
